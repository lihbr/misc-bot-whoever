{
	"display_information": {
		"name": "Whoever",
		"description": "When you need whoever to get the job done",
		"background_color": "#262d52"
	},
	"features": {
		"app_home": {
			"home_tab_enabled": false,
			"messages_tab_enabled": true,
			"messages_tab_read_only_enabled": false
		},
		"bot_user": {
			"display_name": "Whoever",
			"always_online": true
		}
	},
	"oauth_config": {
		"scopes": {
			"bot": [
				"app_mentions:read",
				"channels:history",
				"channels:read",
				"chat:write",
				"groups:history",
				"groups:read",
				"im:history",
				"im:read",
				"mpim:history",
				"mpim:write",
				"mpim:read"
			]
		}
	},
	"settings": {
		"event_subscriptions": {
			"request_url": "https://example.com/api/v1/whoever",
			"bot_events": ["app_mention"]
		},
		"org_deploy_enabled": false,
		"socket_mode_enabled": false,
		"token_rotation_enabled": false
	}
}
